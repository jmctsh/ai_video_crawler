{
  "name": "ai_video_crawler",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n VITE,ELECTRON -c \"bgBlue.bold,bgMagenta.bold\" \"vite\" \"wait-on http://localhost:5173 && npm run build:main && electron ./dist-main/main.cjs\"",
    "build:main": "tsc -p tsconfig.main.json && node -e \"const fs=require('fs'); fs.copyFileSync('dist-main/main.js','dist-main/main.cjs'); fs.writeFileSync('dist-main/package.json', JSON.stringify({ type: 'commonjs' }));\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.1.3",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.471.1",
    "playwright": "^1.56.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.8.1",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "4.2.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^31.7.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "5.4.10",
    "wait-on": "^7.2.0"
  }
}
